@model Main.Control.Core.Models.CampaignDetails

@using Main.Control.Core.Models
@using Main.Control.Web.Utilities
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"></button>
    <h4 class="modal-title">Goals - @Model.CampaignName</h4>
</div>
<div class="modal-body">
    <div class="codeIcon">

        <div class="responsive ">
            @using (Html.BeginForm("_ViewGoalsByCampaignDetailsId", "Campaign", FormMethod.Post, new { id = "ViewGoalsByCampaignDetailsIdForm", enctype = "multipart/form-data" }))
            {
                <table class="responsive">
                    <tr class="floatL">
                        <td class="labelName" style="width:50%;">
                                Goals:
                        </td>
                        <td class="fieldText">
                            @if (Model != null && !string.IsNullOrWhiteSpace(Model.Goals))
                            {
                                <span class=""> @Model.Goals</span>
                            }
                            else
                            {
                                <span> -</span>
                            }
                        </td>
                    </tr>
                    <tr class="spacer10"></tr>
                </table>
            }

        </div>
    </div>
</div>

