@model IEnumerable<Main.Control.Core.Models.AdminActivityLog>

<div>
    <h2 style="color: black">Activity Log - @ViewData["AdminUserName"]</h2>
</div>
<div class="spacer10">
</div>
<div class="formTable">

    @if (Model != null && Model.Count() > 0)
    {

        foreach (var item in Model.Select(a => a.ProjectName).Distinct())
        {         
              
        <h3 style="color: black">Project Name : @item</h3>           
        <div>
            <table class="listGrid">
                <tr>
                    <th>IP Address
                    </th>
                    <th>Visited URL
                    </th>
                    <th>Action</th>
                    <th>Created Time</th>
                </tr>
                @foreach (var i in Model.Where(a => a.ProjectName.Equals(@item)))
                {
                    <tr>
                        <td>
                            <a href="https://www.whatismyipaddress.com/ip/ @Html.DisplayFor(modelItem => i.IpAddress)" style="color:white" target="_new">@Html.DisplayFor(modelItem => i.IpAddress)</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => i.VistedURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => i.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => i.UserCreatedOn)@Html.Raw("(EST)")
                        </td>

                    </tr>
    
                }
            </table>
        </div>
        }

    }

</div>

<script type="text/javascript" lang="javascript">
  
</script>
